<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<xsl:template match="/">
  <xsl:variable name="var" select="college/data/name" />
<xsl:value-of select="$var" />
</xsl:template>
</xsl:stylesheet>
----------------------------------------------------------
RESULT==>BIHER
=====================================================
<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<xsl:template match="/">
  <xsl:for-each select="college/data">
        <extractedValue>
          <xsl:value-of select="name"/>
        </extractedValue>
      </xsl:for-each>
</xsl:template>
</xsl:stylesheet>
------------------------------------------------------
RESULT==><extractedValue>BIHER</extractedValue>
        <extractedValue>Bharath</extractedValue>
=====================================================
<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<xsl:template match="/">
  
  <xsl:for-each select="college/data">
    <xsl:call-template name="show">
      <xsl:with-param name="ncollege" select = "name" />
      <xsl:with-param name="bcollege" select = "batch" />
    </xsl:call-template>
  </xsl:for-each>
  
</xsl:template>

<xsl:template name = "show" >

  <xsl:param name = "ncollege" />
  <xsl:param name = "bcollege" />
   <CollegeName ><xsl:value-of select = "$ncollege" /></CollegeName>
    <BatchCode><xsl:value-of select = "$bcollege" /></BatchCode>

</xsl:template>

</xsl:stylesheet>
-----------------------------------------------------------------------
RESULT==>
<CollegeName>BIHER</CollegeName>
<BatchCode>001</BatchCode>
<CollegeName>Bharath</CollegeName>
<BatchCode>002</BatchCode>
=====================================================================================

